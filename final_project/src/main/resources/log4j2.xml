<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN">
    <Appenders>
        <Console name="console" target="SYSTEM_ERR">
            <PatternLayout
                    pattern="%date{dd.MM.yyyy, HH:mm:ss} %-5level [%thread] %class.%method():%line%n%msg%n%exception%n"/>
        </Console>
    </Appenders>


    <Loggers>
        <Root level="info">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>